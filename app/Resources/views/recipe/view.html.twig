{% extends 'base.html.twig' %}

{% block body %}


 <div class="container body-content span=8 offset=2">
  <div class="well">
   <form class="form-horizontal" >

    <fieldset>


     <font size="50">
      <center>
       <b > {{entity.name}}
       </b>
      </center>
     </font>

     <div class="form-group " >
      <div class="img-thumbnail center-block" >
       <img src="{{entity.picture}}" width="300" height="300" class="center-block" alt="Integridient picture">

      </div>
     </div>
     <div class="form-group">
      <label class="col-sm-4 control-label" for="article_content">Type:</label>
      <div class="col-sm-6">
       {{entity.type}}

      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="article_content">Ingredients:</label>
      <div class="col-sm-6">
       <table>
        <tr>
         <td> {% for elements in entity.array if elements!=0%}
           {{ elements|nl2br }} grams - <br>
          {% endfor %}
         </td>


         <td>
          {% for raws in entity.raws%}

        <a href="{{ path('raw_view' )}}/{{raws.id}}"> {{raws.name}}<br></a>

          {% endfor %}

         </td>
        </tr>
       </table>
      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="article_price">Recipe:</label>
      <div class="col-sm-6 ">
       {{entity.description}}

      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="article_price">Price</label>
      <div class="col-sm-4 ">
       {{entity.price|number_format(2, '.', ',')}}

      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="quantity">Grams:</label>
      <div class="col-sm-6">
       {{entity.quantity|number_format(2, '.', ',')}}

      </div>
     </div>

     

     <div class="form-group">
      <label class="col-sm-4 control-label" for="kcal">Kcal:</label>
      <div class="col-sm-6">
       {{nutrition.kcal|number_format(1, '.', ',')}}

      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="fats">Fats: </label>
      <div class="col-sm-4 ">
       {{nutrition.fats|number_format(1, '.', ',')}}

      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="ufats">Salt fats: </label>
      <div class="col-sm-6">
       {{nutrition.salt|number_format(1, '.', ',')}}

      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="sfats">Saturated fats:</label>
      <div class="col-sm-4 ">
       {{nutrition.saturatedFats|number_format(1, '.', ',')}}

      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="protein">Proteins:</label>
      <div class="col-sm-6">
       {{nutrition.proteins|number_format(1, '.', ',')}}

      </div>
     </div>

     <div class="form-group">
      <label class="col-sm-4 control-label" for="carbs">Carbs:</label>
      <div class="col-sm-4 ">
       {{nutrition.carbs|number_format(1, '.', ',')}}

      </div>
     </div>


     <div class="form-group">
      <label class="col-sm-4 control-label" for="sugars">Suagars:</label>
      <div class="col-sm-4 ">
       {{nutrition.sugars|number_format(1, '.', ',')}}

      </div>
     </div>




    </fieldset>
   </form>
  </div>
 </div>
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>

 {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': 'recipes'~entity.id } %}
{% endblock %}
